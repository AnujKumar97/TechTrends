@model ProductDto
@{
}

<div class="row justify-content-center my-5">
    <div class="col-md-8 p-4 rounded shadow-lg" style="background-color: #f0f4f8;">
        
        <h2 class="text-center mb-4 text-primary">Add New Product</h2>

        <form method="post" enctype="multipart/form-data">
            <div class="form-group row mb-3">
                <label for="Name" class="col-sm-4 col-form-label text-md-end">Product Name</label>
                <div class="col-sm-8">
                    <input id="Name" class="form-control border-primary" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label for="Brand" class="col-sm-4 col-form-label text-md-end">Brand</label>
                <div class="col-sm-8">
                    <input id="Brand" class="form-control border-primary" asp-for="Brand">
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label for="Category" class="col-sm-4 col-form-label text-md-end">Category</label>
                <div class="col-sm-8">
                    <select id="Category" class="form-select border-primary" asp-for="Category">
                        <option value='Other'>Other</option>
                        <option value='Phones'>Phones</option>
                        <option value='Laptops'>Laptops</option>
                        <option value='Accessories'>Accessories</option>
                        <option value='Printers'>Printers</option>
                        <option value='Cameras'>Cameras</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label for="Price" class="col-sm-4 col-form-label text-md-end">Price</label>
                <div class="col-sm-8">
                    <input id="Price" class="form-control border-primary" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label for="Description" class="col-sm-4 col-form-label text-md-end">Description</label>
                <div class="col-sm-8">
                    <textarea id="Description" class="form-control border-primary" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row mb-4">
                <label for="ImageFile" class="col-sm-4 col-form-label text-md-end">Product Image</label>
                <div class="col-sm-8">
                    <input id="ImageFile" type="file" class="form-control border-primary" asp-for="ImageFile">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-8 offset-sm-4 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary px-4">Submit</button>
                    <a class="btn btn-outline-secondary px-4" asp-controller="Products" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

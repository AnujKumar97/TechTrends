<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechTrends</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Custom styles for the hero section */
        .hero-section {
            background-color: #007bff; /* Polished background color */
            background-size: cover;
            background-position: center;
            color: white;
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .hero-description {
            font-size: 1.5rem;
            max-width: 600px;
        }

        .hero-button {
            margin-top: 30px;
        }

        /* Custom styles for the navbar */
        .navbar-custom {
            background-color: #343a40; /* Dark background color */
        }

            .navbar-custom .navbar-brand,
            .navbar-custom .nav-link {
                color: #ffffff; /* White text */
            }

                .navbar-custom .navbar-brand:hover,
                .navbar-custom .nav-link:hover {
                    color: #ffc107; /* Golden hover effect */
                }

        footer {
            background-color: #f0f4f8;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-custom fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TechTrends</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if (Context.Request.Path == "/" || Context.Request.Path.StartsWithSegments("/Home"))
    {
        <div class="hero-section">
            <div>
                <h1 class="hero-title">Welcome to TechTrends</h1>
                <p class="hero-description">
                    Your one-stop destination for the latest electronics. Explore our wide range of gadgets, from cutting-edge
                    smartphones to high-performance laptops. TechTrends is where innovation meets convenience.
                </p>
                <a href="@Url.Action("Index", "Products")" class="btn btn-light hero-button">Explore Now</a>
            </div>
        </div>
    }

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2024 - TechTrends - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
